<% unless @user.id == current_user.id %>
    <% if @is_room == true %>
        <%= link_to "message" , room_path(@room_id) %>
    <% else %>
        <%= form_with @room do |f| %>
            <%= f.text_field :@entry %>
            <%= hidden_field :user_id, value: @user.id %>
            <%= f.submit "メッセージを送る" %>
        <% end %>
    <% end %>
    